<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Input -->

    <style name="Widget.Taxi.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">44dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Taxi.SmallComponent</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/input_box_stroke</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeWidthFocused">0.5dp</item>
    </style>

    <style name="ShapeAppearance.Taxi.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Bottom Sheet -->

    <style name="Widget.Taxi.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Taxi.BottomSheet</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Taxi.BottomSheet" parent="">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>